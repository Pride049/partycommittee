		 xmlns:pagebar="com.partycommittee.control.pagebar.*">
	
	<fx:Script>
		<![CDATA[
			
			private function onPageGoto():void {
				var pageIndex:Number = this.gotoBox.pageIndex;
				
			}
		]]>
	</fx:Script>
	
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	<mx:Button id="firstPageBtn" styleName="pageBtn" enabled="false"/>
	<mx:Button id="prePageBtn" styleName="pageBtn" enabled="false"/>
	<pagebar:LinkTextBar id="linkTextBar"/>
	<mx:Button id="nxtPageBtn" styleName="pageBtn" enabled="false"/>
	<mx:Button id="lastPageBtn" styleName="pageBtn" enabled="false"/>
	<mx:HRule height="90%"/>
	<pagebar:GotoBox id="gotoBox" pageGoto="onPageGoto()"/>
	
</mx:HBox>
